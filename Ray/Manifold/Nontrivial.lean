        refine .of_forall fun y m e ‚Ü¶ ?_; rw [(extChartAt J x).left_inv m]; exact e
      apply (Filter.Tendsto.frequently (p := fun y ‚Ü¶ (extChartAt J x).symm y ‚àà t)
          (continuousAt_extChartAt x) xt').mp
