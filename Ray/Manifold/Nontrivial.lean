/-- pow is nontrivial -/
theorem nontrivialMAnalyticAt_pow {d : ‚Ñï} (d0 : d > 0) {z : ‚ÑÇ} :
    NontrivialMAnalyticAt (fun z ‚Ü¶ z ^ d) z :=
